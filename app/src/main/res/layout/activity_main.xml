<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"></ScrollView>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            
            <LinearLayout
                android:background="@drawable/back"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <ImageView
                    android:src="@drawable/school"
                    android:layout_width="100dp"
                    android:layout_height="100dp"></ImageView>
                
                <TextView
                    android:fontFamily="@font/ubuntu_bold"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="MATERIAL DESIGN"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            
            <LinearLayout
                android:background="@drawable/gradient"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="215dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="135dp">
                    
                    <androidx.cardview.widget.CardView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="7dp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            
                            <ImageView
                                android:id="@+id/profile"
                                android:layout_centerInParent="true"
                                android:src="@drawable/profile"
                                android:layout_width="70dp"
                                android:layout_height="70dp"></ImageView>

                            <TextView
                                android:fontFamily="@font/ubuntu_regular"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/profile"
                                android:textSize="18sp"
                                android:text="PROFILE"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>
                            
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/education"
                                android:layout_centerInParent="true"
                                android:src="@drawable/education"
                                android:layout_width="70dp"
                                android:layout_height="70dp"></ImageView>

                            <TextView
                                android:fontFamily="@font/ubuntu_regular"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/education"
                                android:textSize="18sp"
                                android:text="EDUCATION"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="135dp">

                    <androidx.cardview.widget.CardView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="7dp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/health"
                                android:layout_centerInParent="true"
                                android:src="@drawable/health1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"></ImageView>

                            <TextView
                                android:fontFamily="@font/ubuntu_regular"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/health"
                                android:textSize="18sp"
                                android:text="HEAL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/goal"
                                android:layout_centerInParent="true"
                                android:src="@drawable/goal1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"></ImageView>

                            <TextView
                                android:fontFamily="@font/ubuntu_regular"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/goal"
                                android:textSize="18sp"
                                android:text="GOAL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="135dp">

                    <androidx.cardview.widget.CardView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="7dp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/finance"
                                android:layout_centerInParent="true"
                                android:src="@drawable/finance"
                                android:layout_width="70dp"
                                android:layout_height="70dp"></ImageView>

                            <TextView
                                android:fontFamily="@font/ubuntu_regular"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/finance"
                                android:textSize="18sp"
                                android:text="FINANCE"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/settings"
                                android:layout_centerInParent="true"
                                android:src="@drawable/download"
                                android:layout_width="70dp"
                                android:layout_height="70dp"></ImageView>

                            <TextView
                                android:fontFamily="@font/ubuntu_regular"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/settings"
                                android:textSize="18sp"
                                android:text="SETTING"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="135dp">

                    <androidx.cardview.widget.CardView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="7dp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/contact"
                                android:layout_centerInParent="true"
                                android:src="@drawable/contact"
                                android:layout_width="70dp"
                                android:layout_height="70dp"></ImageView>

                            <TextView
                                android:fontFamily="@font/ubuntu_regular"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/contact"
                                android:textSize="18sp"
                                android:text="CONTACT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/subscribe"
                                android:layout_centerInParent="true"
                                android:src="@drawable/youtube"
                                android:layout_width="70dp"
                                android:layout_height="70dp"></ImageView>

                            <TextView
                                android:fontFamily="@font/ubuntu_regular"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/subscribe"
                                android:textSize="18sp"
                                android:text="SUBSCRIBE"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</ScrollView>